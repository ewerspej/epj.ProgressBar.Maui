<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:maui="clr-namespace:epj.ProgressBar.Maui;assembly=epj.ProgressBar.Maui"
             x:Class="ProgressBarSample.MainPage">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="ProgressColor">DeepSkyBlue</Color>
            <Color x:Key="GradientColor">GreenYellow</Color>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout VerticalOptions="Center"
                             Padding="20,0"
                             Spacing="50">

            <HorizontalStackLayout Spacing="6">
                <Label VerticalOptions="Center" Text="Use Gradient?" />
                <CheckBox x:Name="GradientCheckBox" VerticalOptions="Center" />
            </HorizontalStackLayout>

            <!--  Simple usage  -->
            <VerticalStackLayout Spacing="20">

                <Label Text="Simple usage:" FontSize="Large" />

                <maui:ProgressBar HeightRequest="5"
                                  Margin="15,0"
                                  Progress="{Binding Path=Value, Source={x:Reference ProgressSlider}}"
                                  UseRange="False" RoundCaps="True"
                                  UseGradient="{Binding Path=IsChecked, Source={x:Reference GradientCheckBox}}"
                                  ProgressColor="{StaticResource ProgressColor}"
                                  GradientColor="{StaticResource GradientColor}" />

                <Slider x:Name="ProgressSlider"
                        Minimum="0" Maximum="1"
                        Value="0.25" />

            </VerticalStackLayout>

            <!--  Ranged usage  -->
            <VerticalStackLayout Spacing="20">

                <Label Text="Ranged usage:" FontSize="Large" />

                <maui:ProgressBar x:Name="RangeProgressBar"
                                  HeightRequest="5"
                                  Margin="15,0"
                                  UseRange="True" RoundCaps="True"
                                  LowerRangeValue="{Binding Path=Value, Source={x:Reference LowerRangeSlider}}"
                                  UpperRangeValue="{Binding Path=Value, Source={x:Reference UpperRangeSlider}}"
                                  UseGradient="{Binding Path=IsChecked, Source={x:Reference GradientCheckBox}}"
                                  ProgressColor="{StaticResource ProgressColor}"
                                  GradientColor="{StaticResource GradientColor}" />

                <Label Text="Lower Range" />
                <Slider x:Name="LowerRangeSlider"
                        Minimum="0" Maximum="1"
                        Value="0.4" />

                <Label Text="Upper Range" />
                <Slider x:Name="UpperRangeSlider"
                        Minimum="0" Maximum="1"
                        Value="0.75" />

            </VerticalStackLayout>

            <!--  Segment usage  -->
            <VerticalStackLayout Spacing="20">
                <Label Text="Segment usage:" FontSize="Large" />

                <maui:ProgressBar x:Name="SegmentProgressBar"
                                  HeightRequest="5"
                                  Margin="15,0"
                                  UseSegment="True" RoundCaps="True"
                                  SegmentCount="{Binding Path=Value, Source={x:Reference SegmentCountStepper}}"
                                  SegmentSpacing="{Binding Path=Value, Source={x:Reference SpacingSegmentSlider}}"
                                  ProgressSegment="{Binding Path=Value, Source={x:Reference ProgressSegmentStepper}}"
                                  UseGradient="{Binding Path=IsChecked, Source={x:Reference GradientCheckBox}}"
                                  ProgressColor="{StaticResource ProgressColor}"
                                  GradientColor="{StaticResource GradientColor}" />

                <Label Text="Number of Segments" />
                <Stepper x:Name="SegmentCountStepper"
                         Minimum="1" Maximum="10" Increment="1"
                         Value="5" />

                <Label Text="Spacing Segment" />
                <Slider x:Name="SpacingSegmentSlider"
                        Minimum="0" Maximum="100"
                        Value="24" />

                <Label Text="Progress Segment" />
                <Stepper x:Name="ProgressSegmentStepper"
                         Minimum="1"
                         Maximum="{Binding Path=Value, Source={x:Reference SegmentCountStepper}}"
                         Increment="1"
                         Value="4" />

            </VerticalStackLayout>

            <!--  Animated usage  -->
            <VerticalStackLayout Spacing="10">

                <Label Text="With animation:" FontSize="Large" />

                <maui:ProgressBar x:Name="AnimatedProgressBar"
                                  HeightRequest="5"
                                  Margin="15,0"
                                  UseRange="True" RoundCaps="True"
                                  UseGradient="{Binding Path=IsChecked, Source={x:Reference GradientCheckBox}}"
                                  ProgressColor="{StaticResource ProgressColor}"
                                  GradientColor="{StaticResource GradientColor}" />

            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
